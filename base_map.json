{
  "version": 8,
  "name": "Europe Map - Borders and Cities",
  "sources": {
    "mapbox": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#d8f0f9"
      }
    },
    {
      "id": "country-borders",
      "type": "line",
      "source": "mapbox",
      "source-layer": "admin",
      "filter": ["==", "admin_level", 2],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#333333",
        "line-width": 2
      }
    },
    {
      "id": "major-cities",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "place_label",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name_en}",
        "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ],
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "sprite": "mapbox://sprites/mapbox/streets-v8",
  "center": [10, 50],
  "zoom": 3
}
